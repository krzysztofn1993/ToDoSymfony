{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            {% for message in app.flashes('success')  %}
                <div class ="alert alert-success">
                {{ message }}
                </div>
            {% endfor %}
            <div class="col-md-4">
                {{ form_start(form, {'action': path('home'),'method': 'POST'}) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
        </div>
        <a href={{ path('register') }}>Register</a>
    </div>
{% endblock %}
